<h1>Listing albums</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Release Date</th>
		<th>Genre</th>
		<th>Artist</th>
		<th>Price</th>
		<th>Image</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

<% @albums.each do |album| %>
	<tr>
		<td><%= album.title %></td>
		<td><%= album.release_date %></td>
		<td><%= album.genre %></td>
		<td><%= link_to album.artist.name, album.artist %></td>
		<td><%= album.price %></td>
		<td><%= image_tag(album.image_path, :size =>'90x90') %></td>
		<td><%= link_to 'Show', album %></td>
		<td><%= link_to 'Edit', edit_album_path(album) %></td>
		<td><%= link_to 'Destroy', album, :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
<% end %>
</table>

